<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded"
    >

  <TextView
      android:id="@+id/ui_city_picker_letter"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/ui_city_picker_background"
      android:clickable="false"
      android:paddingBottom="@dimen/view_padding_8"
      android:paddingLeft="@dimen/view_padding_16"
      android:paddingStart="@dimen/view_padding_16"
      android:paddingTop="@dimen/view_padding_8"
      android:textSize="18sp"
      tools:ignore="RtlSymmetry"
      />

  <TextView
      android:id="@+id/ui_city_picker_name"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/view_padding_16"
      android:paddingRight="@dimen/view_padding_20"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginLeft="16dp"
      android:background="?attr/colorPrimaryDark"
      />
</LinearLayout>