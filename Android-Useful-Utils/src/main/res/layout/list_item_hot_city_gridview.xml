<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

  <TextView
      android:id="@+id/ui_city_picker_hot_city"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@drawable/shape_city_select_hot"
      android:gravity="center"
      android:layout_marginTop="@dimen/view_padding_8"
      android:layout_marginLeft="@dimen/view_padding_8"
      android:layout_marginStart="@dimen/view_padding_8"
      android:layout_marginBottom="@dimen/view_padding_8"
      android:layout_marginRight="@dimen/view_padding_20"
      android:layout_marginEnd="@dimen/view_padding_20"
      android:textSize="16sp"
      tools:ignore="RtlHardcoded"
      />

</LinearLayout>